<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">

        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_vuzix"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/main_pick_a_demo"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_main" />

        <Button
            android:id="@+id/btn_demo_sensors"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/vuzix_red"
            android:text="@string/button_main_sensors"
            app:layout_constraintBottom_toTopOf="@+id/gl_main_horz_80"
            app:layout_constraintEnd_toStartOf="@+id/gl_main_vert_33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gl_main_horz_60" />

        <Button
            android:id="@+id/btn_demo_mic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/vuzix_red"
            android:text="@string/button_main_mic"
            app:layout_constraintBottom_toTopOf="@+id/gl_main_horz_80"
            app:layout_constraintEnd_toStartOf="@+id/gl_main_vert_66"
            app:layout_constraintStart_toEndOf="@+id/gl_main_vert_33"
            app:layout_constraintTop_toBottomOf="@+id/gl_main_horz_60" />

        <Button
            android:id="@+id/btn_demo_speakers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/vuzix_red"
            android:text="@string/button_main_speakers"
            app:layout_constraintBottom_toTopOf="@+id/gl_main_horz_80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gl_main_vert_66"
            app:layout_constraintTop_toBottomOf="@+id/gl_main_horz_60" />

        <Button
            android:id="@+id/btn_demo_camera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/vuzix_red"
            android:text="@string/button_main_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gl_main_vert_33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gl_main_horz_80" />

        <Button
            android:id="@+id/btn_demo_unk"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/vuzix_red"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gl_main_vert_66"
            app:layout_constraintStart_toEndOf="@+id/gl_main_vert_33"
            app:layout_constraintTop_toBottomOf="@+id/gl_main_horz_80" />

        <Button
            android:id="@+id/btn_demo_buttons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/vuzix_red"
            android:text="@string/button_main_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gl_main_vert_66"
            app:layout_constraintTop_toBottomOf="@+id/gl_main_horz_80" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_main_vert_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_main_vert_66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".66" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_main_horz_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".60" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_main_horz_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".80" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>